{
  "AppSettings": {
    "EnvPoc": false, //是否演示环境
    "ClearRedis": true, //是否清除redis缓存
    "InjectSpecificationDocument": true //是否开启swagger
  },
  "AllowedHosts": "*",
  //友好异常处理
  "FriendlyExceptionSettings": {
    "DefaultErrorMessage": "系统异常，请联系管理员",
    "HideErrorCode": true
  },
  //排除特定配置文件
  "IgnoreConfigurationFiles": [ "sys_user.json", "dev_config.json", "dev_dict.json", "sys_org.json", "sys_position.json", "sys_relation.json", "sys_resource.json", "sys_role.json" ],
  //动态API设备
  "DynamicApiControllerSettings": {
    "LowercaseRoute": false, //是否采用小写路由，bool 类型，默认 true
    "KeepName": true, //是否保持原有名称不处理，bool，默认 false
    "AsLowerCamelCase": true //启用小驼峰命名（首字母小写），默认 false
  },
  //jwt设置
  "JWTSettings": {
    "ValidateIssuerSigningKey": true, // 是否验证密钥，bool 类型，默认true
    "IssuerSigningKey": "3c1cbc3f546eda35168c3aa3cb91780fbe703f0996c1d133ea96dc85c70bbc0a", // 密钥，string 类型，必须是复杂密钥，长度大于16
    "ValidateIssuer": true, // 是否验证签发方，bool 类型，默认true
    "ValidIssuer": "SimpleAdmin", // 签发方，string 类型
    "ValidateAudience": true, // 是否验证签收方，bool 类型，默认true
    "ValidAudience": "SimpleAdmin", // 签收方，string 类型
    "ValidateLifetime": true, // 是否验证过期时间，bool 类型，默认true，建议true
    "ExpiredTime": 10000, // 过期时间，long 类型，单位分钟，默认20分钟
    "ClockSkew": 5 // 过期时间容错值，long 类型，单位秒，默认5秒
  },
  //swagger设置
  "SpecificationDocumentSettings": {
    "DocumentTitle": "SimpleAdmin通用后台管理系统",
    "DocExpansionState": "None",
    "GroupOpenApiInfos": [
      {
        "Group": "Default", //分组唯一标识，string 类型，必填
        "Order": 99, //分组排序，int 类型，数字越大排前面，默认 0
        "Title": "RBAC权限模块", //配置分组标题，string 类型
        "Description": "让 .NET 开发更简单，更通用，更流行。",
        "Version": "1.0.0", //配置分组版本，默认 1.0
        "TermsOfService": "https://www.cnblogs.com/huguodong/", //配置相关链接地址，Uri 类型
        "Contact": {
          //配置联系方式
          "Name": "少林寺驻北固山办事处大神父王喇嘛",
          "Url": "https://gitee.com/huguodong520",
          "Email": "531035580@qq.com"
        },
        "License": {
          //配置协议，OpenApiLicense 类型
          "Name": "Apache-2.0",
          "Url": "https://gitee.com/huguodong520/SimpleAdmin/blob/master/LICENSE"
        }
      },
      {
        "Group": "Application", //分组唯一标识，string 类型，必填
        "Order": 90, //分组排序，int 类型，数字越大排前面，默认 0
        "Title": "业务模块" //配置分组标题，string 类型
      }
    ]
  },
  "CorsAccessorSettings": {
    "WithExposedHeaders": [
      "access-token",
      "x-access-token",
      "environment"
    ]
  },
}